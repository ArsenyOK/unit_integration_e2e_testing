{
  "name": "mini-shop",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve",
    "test:jest": "jest --passWithNoTests",
    "test:unit": "jest --passWithNoTests --testMatch \"**/?(*.)+(unit).spec.ts\"",
    "test:int": "jest --passWithNoTests --testMatch \"**/?(*.)+(int).spec.ts\"",
    "test:ui": "jest --passWithNoTests --testMatch \"**/?(*.)+(unit|int).spec.ts\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:unit:cov": "jest -c jest.unit.cjs",
    "test:int:cov": "jest -c jest.int.cjs",
    "test:cov": "run-s --continue-on-error test:unit:cov test:int:cov",
    "test:cov-all": "jest -c jest.all.cjs && npm run test:e2e:cov",
    "open:cov:all": "start ./coverage-all/lcov-report/index.html",
    "test:e2e:cov": "rimraf .nyc_output coverage-e2e && playwright test && nyc report --report-dir coverage-e2e && start ./coverage-e2e/index.html",
    "build:dev": "ng build --configuration development --output-path=dist",
    "build:cov:e2e": "rimraf dist-cov && npm run build:dev && nyc --no-config instrument dist dist-cov --compact=false --verbose",
    "serve:cov:e2e": "http-server dist-cov -p 4200 -s -c-1",
    "test:e2e:cov:console": "rimraf .nyc_output && npm run build:cov:e2e && playwright test -c playwright.coverage.config.ts --reporter=list && nyc report --reporter=text-summary"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/platform-server": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@angular/ssr": "^20.2.2",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.2.2",
    "@angular/cli": "^20.2.2",
    "@angular/compiler-cli": "^20.2.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/angular": "^18.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.13",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "http-server": "^14.1.1",
    "jasmine-core": "~5.9.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "vite-plugin-istanbul": "^7.1.0"
  }
}
